<%= form_for [@post, comment] do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  
    <div class="field">
      <%= f.label :context, "Comment" %>
      <%= f.text_area :context %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>